<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.sitesdb.controller.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <ListView fx:id="saleList" prefHeight="200.0" prefWidth="500.0"/>
  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
      <Button mnemonicParsing="false" onAction="#addWebsite" text="Add"/>
      <Button mnemonicParsing="false" onAction="#editWebsite" text="Edit"/>
      <Button mnemonicParsing="false" onAction="#deleteSale" text="Delete"/>
      <Button mnemonicParsing="false" onAction="#searchByAddress" text="Search by caregory"/>
      <Button mnemonicParsing="false" onAction="#searchByProduct" text="Show name and description"/>
    </children>
  </HBox>
</VBox>
